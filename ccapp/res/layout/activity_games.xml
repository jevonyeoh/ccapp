<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >  
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
	    <LinearLayout 	
	        android:orientation="horizontal" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
				
			<ImageButton
		      android:layout_width="330px"
		      android:layout_height="50px"
		      android:src="@drawable/ccapp_header"
		      android:onClick="onHomePageClick"/>	
			    
			<ImageButton 
			    android:id="@+id/panic"
				android:layout_width="wrap_content" 
				android:layout_height="50px" 
				android:src="@drawable/ccapp_panic"
				android:onClick="onPanicButtonClick"/>	
		</LinearLayout>
   

	    <com.example.ccapp.GamesMenu
	        android:id="@+id/gamesmenu"
	        android:layout_width="fill_parent"
	        android:layout_height="330dp" />
	    	    
	</LinearLayout>
    
    
	<com.example.ccapp.ButtonView
	     android:layout_alignParentBottom="true"
	     android:id="@+id/button"
	     android:layout_width="fill_parent"
	     android:layout_height="150px"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:onClick="onFinishButtonClick"
        android:text="@string/back" />

</RelativeLayout>